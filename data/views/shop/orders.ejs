<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
            <h1>Nothing there!</h1>
            <% } else { %>
                
                    <ul>
                        <% orders.forEach(order => { %>
                            <li>
                                <h6><%= order.id %></h6>
                                <ul><% order.products.forEach(product => {%>
                                   
                                    <p> <%= product.title %> (<%= product.orderItem.quantity %>)</p>
                                </ul>
                            </li><% })})} %>
                    </ul>
                 
        </main>
        <%- include('../includes/end.ejs') %>